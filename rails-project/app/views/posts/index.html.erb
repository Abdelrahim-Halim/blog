<p id="notice"><%= notice %></p>


<% @posts.each do |post| %>
<div class="card mb-3">
  <div class="card-header">
    <h1 class="font-weight-bold"><%= post.title %></h1>
    <div>
      <%= post.created_at %>
    </div>
  </div>
  <div class="card-body">

  <blockquote class="blockquote mb-0">
      <p class="h2"><%= post.body %></p>
    
      <ul class="list-group list-group-horizontal">
        <li class="list-group-item"><%= link_to 'Comments', post , class: "btn btn-success text-dark px-3 mx-2"%></li>
        <li class="list-group-item"><%= link_to 'Edit', edit_post_path(post), class: "btn btn-warning text-dark px-3 mx-2" %></li>
        <li class="list-group-item"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger text-dark px-3 mx-2" %></li>
      </ul>
    
  </blockquote>
  </div>
  
  </div>
<% end %>

<%= link_to 'New Post', new_post_path %>
